
<%= react_component("BikeBinApp", props: {bikes: @bikes}) %>

<p id="notice"><%= notice %></p>

<h1>Bikes</h1>

<table>
  <thead>
    <tr>
      <th>Size</th>
      <th>Color</th>
      <th>Type</th>
      <th>Condition</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Year</th>
      <th>Miles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= "#{bike.size} #{bike.size_unit}" %></td>
        <td><%= bike.color %></td>
        <td><%= bike.discipline %></td>
        <td><%= bike.condition %></td>
        <td><%= bike.brand %></td>
        <td><%= bike.model %></td>
        <td><%= bike.year %></td>
        <td><%= bike.miles %></td>
        <td><%= link_to 'Show', bike %></td>
        <td><%= link_to 'Edit', edit_bike_path(bike) %></td>
        <td><%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bike', new_bike_path %>
